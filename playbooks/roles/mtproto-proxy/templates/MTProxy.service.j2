[Unit]
Description=MTProxy
After=network.target
Documentation=https://github.com/TelegramMessenger/MTProxy

[Service]
Type=simple
WorkingDirectory={{ mtproxy_location }}
ExecStart={{ mtproxy_exec_location }}/mtproto-proxy -u nobody -p 6666 -H {{ mtproxy_port }} -S {{ mtproxy_secret.stdout}} --aes-pwd proxy-secret proxy-multi.conf -M 1
Restart=on-failure

[Install]
WantedBy=multi-user.target
